<body>
  <div>
    <p>The number of visitors is : <span id="cntr">0</span></p>
  </div>

  <script>
    function counter_fn() {
      var counter = document.getElementById("cntr");
      var count = 0;
      count = counter.value;
      count = count + 1;
      counter.innerHTML = count;
    }
    window.onload = counter_fn;
  </script>
</body>

